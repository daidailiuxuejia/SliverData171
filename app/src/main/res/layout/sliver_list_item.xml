<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="48dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <RelativeLayout
                    android:id="@+id/lin8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="最新价"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/latestpri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text8"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/latestpri_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="开盘价"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/openingpri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/openingpri_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="最高价"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/maxpri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/maxpri_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="最低价"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/minpri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text3"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/minpri_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="涨跌幅"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text4"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/limit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="昨日收盘价"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/yespri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text5"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/yespri_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="总成交量"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/totalvol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text6"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/totalvol_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lin7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="品种代号"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text7"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="时间"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text9"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#333"
                        android:textSize="18dp"/>


                </RelativeLayout>


            </LinearLayout>



</RelativeLayout>
